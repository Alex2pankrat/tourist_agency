<h1>Корзина</h1>

<h1>Оформление заказа</h1>

<h2>Корзина</h2>
{{#if cartTours.length}}
<table border="1">
    <tr>
        <th>Наимен-ие</th>
        <th>Цена</th>
        <th>Кол-во</th>
        <th>Действия</th>
    </tr>

    {{#each cartTours}}
    <tr>
        <td>{{this.TourName}}</td>
        <td>{{this.Price}}</td>
        <td>1</td>
        <td>
            <form action="/sales/removeFromCart/{{this.TourID}}" method="POST" style="display:inline;">
                <button type="submit" onclick="return confirm('Вы уверены, что хотите удалить этот тур из корзины?');">
                    Удалить
                </button>
            </form>
        </td>
    </tr>
    {{/each}}
</table>

<br />
Всего на {{totalPrice}} рублей
<br />
<a href="/tours"> Назад к списку туров </a>
<br /> <br />

<form action="/sales/cartToHistory" method="POST">
    <select name="ClientID" id="ClientID">
        <option value="0">Выберите Клиента:</option>
        {{#each Clients}}
           <option value="{{this.ClientID}}">  {{this.FirstName}} {{this.LastName}}</option>
        {{/each}}
    </select>

    <button type="submit"> Оплатить заказ </button>
</form>

{{else}}
<p>Ваша корзина пуста!</p>
{{/if}}